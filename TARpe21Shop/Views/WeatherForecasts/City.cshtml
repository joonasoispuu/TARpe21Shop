@model Tarpe21Shop.Models.Weather.WeatherViewModel

<div class="container mt-5">
    <h1 class="mb-4 text-center">Tallinn</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var forecast in Model.ForecastEntries)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title">@forecast.Date</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Description:</strong> @forecast.Description<br>
                            <strong>Temperature:</strong> @forecast.Temperature &deg;C<br>
                            <strong>Humidity:</strong> @forecast.Humidity %<br>
                            <strong>Wind Speed:</strong> @forecast.WindSpeed km/h<br>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
